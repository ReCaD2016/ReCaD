<Page
    x:Class="Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="1000" Height="1000">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock FontSize="20" HorizontalAlignment="Center">Here is the received screen capture!</TextBlock>
            <StackPanel Orientation="Vertical">
                <Image x:ConnectionId='1' Name="pic" Stretch="Uniform" Height="500"></Image>
                <WebView x:ConnectionId='2' Name="web" Width="1000" Height="500"></WebView>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

